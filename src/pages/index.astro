---
// src/pages/index.astro
import Layout from "../layout/Layout.astro";
import "../styles/global.css";
import GenGallery from "../components/GenGallery.astro";
const videoUrl =
	"https://player.cloudinary.com/embed/?cloud_name=dtjypy9b9&public_id=herovid_quhdzy&profile=herovid";
---

<Layout>
	<title slot="title">Generative Art Gallery by Diane Corriette</title>

	<!-- Hero Section -->

	<section
		id="hero"
		class="relative w-full min-h-screen flex items-center justify-center overflow-hidden"
	>
		<!-- Background Video -->
		<div class="absolute inset-0 w-full h-full pointer-events-none">
			<iframe
				src="https://player.cloudinary.com/embed/?cloud_name=dtjypy9b9&public_id=herovid_quhdzy&player[autoplay]=true&player[autoplayMode]=on-scroll&player[muted]=true&player[loop]=true&player[controls]=false"
				class="w-full h-full object-cover"
				frameborder="0"
				allow="autoplay; fullscreen; picture-in-picture"
				allowfullscreen
				title="Hero Background Video"></iframe>
			<div class="absolute inset-0 bg-black/50"></div>
		</div>

		<!-- Hero Content -->
		<div class="relative z-10 px-4 sm:px-6 lg:px-8 w-full">
			<div class="max-w-4xl mx-auto text-center text-white py-24 sm:py-32">
				<!-- Badge -->
				<div
					class="inline-flex items-center space-x-2 bg-blue-600/20 backdrop-blur-sm border border-blue-400/30 rounded-full px-6 py-2 mb-6 sm:mb-8"
				>
					<div class="w-2 h-2 bg-blue-400 rounded-full animate-pulse"></div>
					<span class="text-blue-200 font-medium text-sm sm:text-base">
						Diane Corriette - Generative Art Gallery
					</span>
				</div>

				<!-- Main Headline -->
				<h1
					class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tight mb-4 sm:mb-6"
				>
					Creative Coding
					<span
						class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-purple-700"
					>
						Generative Art
					</span>
				</h1>

				<!-- Subheadline -->
				<p
					class="text-lg sm:text-xl text-gray-200 mb-6 sm:mb-8 leading-relaxed"
				>
					Exploring the intersection of code and creativity
				</p>

				<!-- CTA -->
				<div
					class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6"
				>
					<a
						href="/#gallery"
						class="uppercase p-3 px-6 border-2 border-yellow-400 hover:bg-yellow-400 text-yellow-400 hover:text-black rounded text-sm sm:text-base font-semibold transition"
					>
						Gallery
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Gallery Section -->
	<div id="gallery">
		<GenGallery />
	</div>

	<!-- About Section -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<h2 class="text-4xl font-bold text-center mb-12">About This Gallery</h2>
			<div class="max-w-3xl mx-auto text-lg text-gray-700 leading-relaxed">
				<p class="mb-6">
					Welcome to my generative art gallery, where code meets creativity.
					Each piece is algorithmically generated using JavaScript and HTML5
					Canvas, creating unique visual experiences that blend mathematics,
					programming, and artistic expression.
				</p>
				<p>
					From flowing particles to geometric patterns, these works explore the
					beauty that emerges from computational processes and mathematical
					relationships.
				</p>
			</div>
		</div>
	</section>
</Layout>
