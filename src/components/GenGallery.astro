---
// src/components/GenGallery.astro
import GenArtPiece from "./GenArtPiece.astro";

const artPieces = [
  {
    id: "piece1",
    title: "Animated Dots",
    gridClass: "sm:col-start-1 sm:col-end-3 sm:row-start-1 sm:row-end-3",
  },
  {
    id: "piece2",
    title: "Geometric Waves",
    gridClass: "",
  },
  {
    id: "animals",
    title: "Animals",
    gridClass: "sm:col-start-3 sm:col-end-4 sm:row-start-1 sm:row-end-3",
  },
  {
    id: "circles",
    title: "Circles",
    gridClass: "sm:col-start-1 sm:col-end-2 sm:row-start-3 sm:row-end-5",
  },
];
---

<section class="py-4 sm:py-8 md:py-12 lg:py-16 bg-blue flex flex-col gap-y-10">
  <h2
    class="self-center text-center text-2xl uppercase font-black sm:text-4xl sm:font-medium relative after after:h-3 after:w-full after:bg-golden after:bottom-0.5 after:left-0 after:-z-[1] z-[1] after:blur-sm px-1"
  >
    Art Gallery
  </h2>
  <div class="grid gap-4 sm:grid-cols-3">
    {
      artPieces.map((piece) => (
        <GenArtPiece
          id={piece.id}
          title={piece.title}
          gridClass={piece.gridClass}
        />
      ))
    }
  </div>
</section>
